<AnchorPane fx:id="mainPane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.gui.DashboardController">
   <children>
      <BorderPane layoutX="-15.0" layoutY="-5.0" prefHeight="812.0" prefWidth="1333.0" >
         <left>
            <VBox alignment="CENTER" prefHeight="812.0" prefWidth="300" styleClass="sidebar" stylesheets="@css/main.css" BorderPane.alignment="CENTER">
               <!-- Sidebar with improved spacing -->
               <padding>
                  <Insets bottom="25.0" left="20.0" right="20.0" top="25.0" />
               </padding>
               <children>

                  <VBox prefHeight="180.0" alignment="CENTER" spacing="15" style="-fx-background-color:rgba(191, 226, 246, 0.82);
                     -fx-padding: 12 10;
                     -fx-background-radius: 35;
                     -fx-border-color: black;
                     -fx-border-width: 0;
                     -fx-border-radius: 35;" >
                     <children>
                        <HBox alignment="CENTER" fillHeight="false" prefHeight="100.0" prefWidth="255.0" >
                           <children>
                              <Pane prefHeight="100.0" prefWidth="100.0"
                                    style="-fx-background-color: #ffffff; -fx-background-radius: 50px;
                                   -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                                 <children>
                                    <ImageView fitHeight="90.0" fitWidth="90.0" layoutX="8.0" layoutY="8.0"
                                               pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@assets/logo.png" />
                                       </image>
                                    </ImageView>
                                 </children>
                              </Pane>
                           </children>
                        </HBox>
                        <Label alignment="CENTER" prefHeight="30.0" prefWidth="266.0" textFill="#000000" text="Bonjour Fatales !"
                               style="-fx-font-weight:light">
                           <font>
                              <Font size="25.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>


                  <VBox alignment="CENTER" spacing="18.0" prefHeight="450.0" prefWidth="Infinity">
                     <padding>
                        <Insets top="35.0" bottom="25.0" />
                     </padding>
                     <children>
                        <Button text="Tableau de bord" onAction="#showDashboardContent" maxWidth="Infinity" graphicTextGap="15.0"
                                contentDisplay="LEFT" styleClass="sidebar-button">
                           <graphic>
                              <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@assets/dashboard.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                           <padding>
                              <Insets bottom="7.0" left="15.0" right="10.0" top="7.0" />
                           </padding>
                        </Button>
                        <Button text="Produits" onAction="#showProduits" maxWidth="Infinity" graphicTextGap="15.0"
                                contentDisplay="LEFT" styleClass="sidebar-button">
                           <graphic>
                              <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@assets/product.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                           <padding>
                              <Insets bottom="7.0" left="15.0" right="10.0" top="7.0" />
                           </padding>
                        </Button>

                        <Button text="Promotion" onAction="#showPromotion" maxWidth="Infinity" graphicTextGap="15.0"
                                contentDisplay="LEFT" styleClass="sidebar-button">
                           <graphic>
                              <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@assets/discount.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                           <padding>
                              <Insets bottom="7.0" left="15.0" right="10.0" top="7.0" />
                           </padding>
                        </Button>

                        <Button text="Les Horaires" onAction="#showHoraires" maxWidth="Infinity" graphicTextGap="15.0"
                                contentDisplay="LEFT" styleClass="sidebar-button">
                           <graphic>
                              <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@assets/calendar.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                           <padding>
                              <Insets bottom="7.0" left="15.0" right="10.0" top="7.0" />
                           </padding>
                        </Button>

                        <Button text="Les Événements" onAction="#showEvenements" maxWidth="Infinity" graphicTextGap="15.0"
                                contentDisplay="LEFT" styleClass="sidebar-button">
                           <graphic>
                              <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@assets/event.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                           <padding>
                              <Insets bottom="7.0" left="15.0" right="10.0" top="7.0" />
                           </padding>
                        </Button>

                         <Button text="Commandes" onAction="#showCommandes" maxWidth="Infinity" graphicTextGap="15.0"
                                 contentDisplay="LEFT" styleClass="sidebar-button">
                             <graphic>
                                 <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                     <image>
                                         <Image url="@assets/buy.png" />
                                     </image>
                                 </ImageView>
                             </graphic>
                             <padding>
                                 <Insets bottom="7.0" left="15.0" right="10.0" top="7.0" />
                             </padding>
                         </Button>
                        <Button text="Profil" onAction="#showProfil" maxWidth="Infinity" graphicTextGap="15.0"
                                contentDisplay="LEFT" styleClass="sidebar-button">
                           <graphic>
                              <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@assets/feedback.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                           <padding>
                              <Insets bottom="7.0" left="15.0" right="10.0" top="7.0" />
                           </padding>
                        </Button>
                     </children>
                  </VBox>

                  <!-- Logout section with improved spacing -->
                  <VBox alignment="BOTTOM_CENTER" prefHeight="70.0" prefWidth="Infinity" spacing="10.0">
                     <children>
                        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                                prefHeight="45.0" prefWidth="260.0" text="Se Déconnecter" textFill="WHITE"
                                styleClass="logout-button" style="-fx-font-size: 17px;">
                           <font>
                              <Font name="Dubai light" />
                           </font>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </VBox>
               </children>
            </VBox>
         </left>
         <center>
            <StackPane fx:id="contentPane" prefWidth="955" minWidth="955" maxWidth="955" />
         </center>
      </BorderPane>
