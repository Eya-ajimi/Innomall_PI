<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@../css/panier.css"
            fx:controller="tn.esprit.gui.mariahosscontroller.PanierCardController"
            prefHeight="400.0" prefWidth="600.0">

    <HBox prefWidth="900.0" spacing="20" style="-fx-background-color: white; -fx-border-color: #88d1e7; -fx-border-radius: 15; -fx-background-radius: 15; -fx-border-width: 2; -fx-effect: dropshadow(three-pass-box, rgba(136, 209, 231, 0.3), 10, 0, 0, 3);">
        <padding>
            <Insets bottom="15" left="20" right="20" top="15" />
        </padding>

        <!-- Colonne gauche : Informations produit -->
        <VBox prefHeight="80.0" prefWidth="386.0" spacing="8">
            <!-- Nom du produit -->
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label style="-fx-font-weight: bold; -fx-font-size: 14; -fx-text-fill: #88d1e7;" text="Nom :" />
                <Label fx:id="nomLabel" style="-fx-font-weight: bold; -fx-font-size: 14;">
                    <font>
                        <Font name="Montserrat Bold" size="14.0" />
                    </font>
                </Label>
            </HBox>

            <!-- Description du produit -->
            <HBox alignment="CENTER_LEFT" prefHeight="18.0" prefWidth="328.0" spacing="5">
                <Label style="-fx-font-weight: bold; -fx-text-fill: #88d1e7;" text="Description :" />
                <Label fx:id="descriptionLabel" style="-fx-text-fill: #444;" wrapText="true" />
            </HBox>

            <!-- Prix du produit -->
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label style="-fx-font-weight: bold; -fx-text-fill: #88d1e7;" text="Prix :" />
                <Label fx:id="prixLabel" style="-fx-font-weight: bold; -fx-text-fill: white; -fx-background-color: #88d1e7; -fx-padding: 3 8; -fx-background-radius: 10;" />
            </HBox>
        </VBox>

        <!-- Colonne droite : ContrÃ´les quantitÃ© -->
        <HBox alignment="CENTER" spacing="12.0">
            <Button onAction="#handleDiminuerQuantite"
                    style="-fx-background-color: #88d1e7; -fx-background-radius: 50%; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 30; -fx-min-height: 30;"
                    text="-" />

            <Label fx:id="quantiteLabel"
                   style="-fx-padding: 5 15; -fx-background-color: #f5f5f5; -fx-background-radius: 15; -fx-font-weight: bold; -fx-font-size: 14; -fx-border-color: #88d1e7; -fx-border-radius: 15; -fx-border-width: 1;" />

            <Button onAction="#handleAugmenterQuantite"
                    style="-fx-background-color: #88d1e7; -fx-background-radius: 50%; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 30; -fx-min-height: 30;"
                    text="+" />

            <Button onAction="#handleSupprimerArticle"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 50%; -fx-font-weight: bold; -fx-min-width: 35; -fx-min-height: 35;"
                    text="ðŸ—‘" />
        </HBox>
    </HBox>
</AnchorPane>