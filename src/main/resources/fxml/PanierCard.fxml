<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@../css/panier.css"
            fx:controller="tn.esprit.gui.mariahosscontroller.PanierCardController"
            prefHeight="100.0" prefWidth="800.0">
    <HBox alignment="CENTER" prefWidth="800.0" spacing="15"
          style="-fx-background-color: white; -fx-border-color: #F7D9C3;
                 -fx-border-radius: 10; -fx-background-radius: 10; -fx-border-width: 1.5;
                 -fx-effect: dropshadow(three-pass-box, rgba(136, 209, 231, 0.2), 5, 0, 0, 2);">
        <padding>
            <Insets bottom="12" left="15" right="15" top="12" />
        </padding>

        <!-- Image du produit -->
        <ImageView fx:id="imageView" fitWidth="80" fitHeight="80"
                   style="-fx-background-radius: 15; -fx-border-radius: 15;"
                   preserveRatio="true"/>

        <!-- Colonne gauche : Informations produit -->
        <VBox spacing="6" HBox.hgrow="ALWAYS">
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label style="-fx-font-weight: bold; -fx-font-size: 14; -fx-text-fill: #88d1e7;" text="Nom :" />
                <Label fx:id="nomLabel" style="-fx-font-weight: bold; -fx-font-size: 14;" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label style="-fx-font-weight: bold; -fx-text-fill: #88d1e7;" text="Description :" />
                <Label fx:id="descriptionLabel" style="-fx-text-fill: #444;" wrapText="true" maxWidth="300.0" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label style="-fx-font-weight: bold; -fx-text-fill: #88d1e7;" text="Prix :" />
                <Label fx:id="prixLabel" style="-fx-font-weight: bold; -fx-text-fill: white;
                            -fx-background-color: #88d1e7; -fx-padding: 3 8; -fx-background-radius: 10;" />
            </HBox>
        </VBox>

        <!-- Spacer to push controls to the right -->
        <Region HBox.hgrow="ALWAYS" />

        <!-- Colonne droite : ContrÃ´les quantitÃ© -->
        <HBox alignment="CENTER" spacing="10">
            <Button onAction="#handleDiminuerQuantite"
                    style="-fx-background-color: #F7D9C3; -fx-background-radius: 50%;
                           -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 30; -fx-min-height: 30;"
                    text="-" />
            <Label fx:id="quantiteLabel"
                   style="-fx-padding: 5 15; -fx-background-color: #f5f5f5;
                          -fx-background-radius: 15; -fx-font-weight: bold; -fx-font-size: 14;
                          -fx-border-color: #88d1e7; -fx-border-radius: 15; -fx-border-width: 1;" />
            <Button onAction="#handleAugmenterQuantite"
                    style="-fx-background-color: #F7D9C3; -fx-background-radius: 50%;
                           -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 30; -fx-min-height: 30;"
                    text="+" />
            <Button onAction="#handleSupprimerArticle"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 50%;
                           -fx-font-weight: bold; -fx-min-width: 35; -fx-min-height: 35;"
                    text="ðŸ—‘" />
        </HBox>
    </HBox>
</AnchorPane>