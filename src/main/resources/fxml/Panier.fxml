<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.gui.mariahosscontroller.PanierController"
      prefHeight="904.0" prefWidth="1353.0"
      styleClass="main-container">

    <!-- Top Navigation Bar with the first color: rgba(191, 226, 246, 0.82) -->
    <HBox alignment="CENTER" prefHeight="80.0" styleClass="nav-bar"
          style="-fx-background-color: rgba(191, 226, 246, 0.82); -fx-border-color: #e9ecef; -fx-border-width: 0 0 1 0;">
        <padding>
            <Insets left="30.0" right="30.0" />
        </padding>
        <children>
            <Label prefHeight="50.0" prefWidth="150.0" styleClass="logo-label" text="InnoMall" style="-fx-font-weight: bold; -fx-font-size: 22px; -fx-text-fill: #333333;">
                <HBox.margin>
                    <Insets right="20.0" />
                </HBox.margin>
            </Label>
            <Separator orientation="VERTICAL" prefHeight="50.0" />

            <HBox alignment="CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets left="20.0" right="20.0" />
                </padding>
                <TextField fx:id="searchField" prefHeight="35.0" promptText="Search..."
                           style="-fx-background-radius: 20; -fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-radius: 20;" HBox.hgrow="ALWAYS" maxWidth="300.0">
                    <padding>
                        <Insets left="15.0" right="15.0" />
                    </padding>
                </TextField>
                <Button style="-fx-background-radius: 50; -fx-background-color: rgba(255, 165, 0, 0.77); -fx-min-width: 35; -fx-min-height: 35; -fx-max-width: 35; -fx-max-height: 35;">
                    <graphic>
                        <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../assets/searchbare.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>

            <HBox alignment="CENTER" spacing="30.0">
                <Label fx:id="homeLabel" styleClass="nav-label" text="Home" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                <Label styleClass="nav-label" text="Shops" style="-fx-font-size: 14px;" />
                <Label styleClass="nav-label" text="Events" style="-fx-font-size: 14px;" />
                <Label styleClass="nav-label" text="Parking" style="-fx-font-size: 14px;" />
            </HBox>

            <Pane prefWidth="20.0" HBox.hgrow="ALWAYS" />

            <HBox alignment="CENTER" spacing="15.0">
                <Button styleClass="icon-button" style="-fx-background-color: transparent;">
                    <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../assets/notif.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <HBox alignment="CENTER" spacing="10.0" styleClass="user-profile" style="-fx-background-color: rgba(255, 165, 0, 0.2); -fx-background-radius: 20;">
                    <padding>
                        <Insets left="15.0" right="15.0" top="8.0" bottom="8.0" />
                    </padding>
                    <Label styleClass="user-label" text="Eyaaa" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                    <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../assets/user3.png" />
                        </image>
                    </ImageView>
                </HBox>
            </HBox>
        </children>
    </HBox>

    <!-- Main Content with accent colors -->
    <HBox alignment="CENTER" style="-fx-background-color: #f5f5f5; -fx-padding: 30;">
        <children>
            <VBox styleClass="cart-container" style="-fx-background-color: white; -fx-background-radius: 10;
                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);" maxWidth="1000.0" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                </padding>

                <!-- Cart Header with accent color -->
                <HBox alignment="CENTER" styleClass="cart-header" style="-fx-background-color: rgba(191, 226, 246, 0.3);
                     -fx-background-radius: 5; -fx-padding: 10 15;">
                    <Label alignment="CENTER" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Votre Panier" />
                    <Pane HBox.hgrow="ALWAYS" />
                    <Label fx:id="itemCountLabel" text="0 articles" style="-fx-font-size: 14px; -fx-text-fill: #555;" />
                </HBox>

                <Separator style="-fx-padding: 10 0 15 0;" />

                <!-- Cart Items -->
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" maxHeight="500.0" prefHeight="450.0"
                            style="-fx-background-color: transparent; -fx-border-color: transparent;"
                            styleClass="cart-scroll" stylesheets="@../css/panier.css"
                            vbarPolicy="AS_NEEDED">
                    <content>
                        <VBox fx:id="panierVBox" style="-fx-background-color: transparent;">
                            <padding>
                                <Insets top="0.0" right="0.0" bottom="0.0" left="0.0" />
                            </padding>
                        </VBox>
                    </content>
                </ScrollPane>

                <Separator style="-fx-padding: 15 0 15 0;" />

                <!-- Cart Summary with accent colors -->
                <VBox spacing="20" styleClass="cart-summary">
                    <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-background-color: rgba(191, 226, 246, 0.2); -fx-background-radius: 5; -fx-padding: 10 15;">
                        <Label text="Total de la commande:" style="-fx-font-size: 18px;">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <Label fx:id="totalLabel" style="-fx-font-weight: bold; -fx-text-fill: #333333; -fx-font-size: 22px;">
                            <font>
                                <Font size="22.0" />
                            </font>
                        </Label>
                    </HBox>

                    <HBox alignment="CENTER_RIGHT" spacing="15">
                        <Button styleClass="btn-secondary" style="-fx-background-color: rgba(191, 226, 246, 0.82); -fx-text-fill: #333333; -fx-background-radius: 5; -fx-font-weight: bold;"
                                text="Continuer les achats">
                            <font>
                                <Font size="14.0" />
                            </font>
                            <padding>
                                <Insets top="10.0" right="15.0" bottom="10.0" left="15.0" />
                            </padding>
                        </Button>
                        <Button onAction="#handlePasserCommande"
                                style="-fx-background-color: rgba(255, 165, 0, 0.77); -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold;"
                                text="Passer la commande">
                            <font>
                                <Font size="14.0" />
                            </font>
                            <padding>
                                <Insets top="10.0" right="15.0" bottom="10.0" left="15.0" />
                            </padding>
                        </Button>
                    </HBox>
                </VBox>
            </VBox>
        </children>
    </HBox>
</VBox>
