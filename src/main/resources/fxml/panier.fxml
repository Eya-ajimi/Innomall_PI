<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.gui.PanierController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Titre de la page -->
    <Label text="Votre Panier" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <!-- Liste des articles dans le panier -->
    <ListView fx:id="panierListView"/>

    <!-- Total de la commande -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Label text="Total de la commande :"/>
        <Label fx:id="totalLabel" style="-fx-font-weight: bold;"/>
    </HBox>

    <!-- Bouton pour passer la commande -->
    <Button text="Passer la commande" onAction="#handlePasserCommande" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
</VBox>