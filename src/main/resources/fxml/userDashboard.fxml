<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.gui.UserDashboardController">
    <!-- Label pour afficher le message de bienvenue -->
    <Label fx:id="welcomeLabel" layoutX="50" layoutY="50">
        <font>
            <Font name="System Bold" size="24"/>
        </font>
    </Label>

    <!-- Labels pour afficher les informations de l'utilisateur -->
    <Label fx:id="nomLabel" layoutX="50" layoutY="100"/>
    <Label fx:id="prenomLabel" layoutX="50" layoutY="130"/>
    <Label fx:id="emailLabel" layoutX="50" layoutY="160"/>
    <Label fx:id="telephoneLabel" layoutX="50" layoutY="190"/>
    <Label fx:id="adresseLabel" layoutX="50" layoutY="220"/>
    <Label fx:id="roleLabel" layoutX="50" layoutY="250"/>
    <Label fx:id="statutLabel" layoutX="50" layoutY="280"/>
    <Label fx:id="dateInscriptionLabel" layoutX="50" layoutY="310"/>

    <!-- Bouton de déconnexion -->
    <Button layoutX="50" layoutY="350" text="Déconnexion" onAction="#handleLogout"/>
</AnchorPane>