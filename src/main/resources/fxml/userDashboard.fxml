<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.ProgressBar?>
<VBox minWidth="-Infinity" prefHeight="904.0" prefWidth="1353.0" spacing="10" style="-fx-background-color: #E1F4FF;" stylesheets="@../css/Styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.gui.azizcontroller.UserDashboardController">

    <!-- Top Navigation Bar -->
    <HBox alignment="CENTER" prefHeight="73.0">
        <children>
            <!-- Logo Label -->
            <Label prefHeight="50.0" prefWidth="133.0" styleClass="logo-label" text="InnoMall">
                <HBox.margin>
                    <Insets left="-140.0" />
                </HBox.margin>
            </Label>

            <!-- Separator -->
            <Separator orientation="VERTICAL" prefHeight="74.0" prefWidth="21.0" />

            <!-- Search Bar -->
            <!-- Search Bar -->
            <HBox alignment="CENTER" spacing="5.0">
                <TextField fx:id="searchField" prefHeight="26.0" prefWidth="258.0" promptText="Search..." style="-fx-background-radius: 15; -fx-background-color: white;" />
                <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../assets/searchbare.png" />
                    </image>
                </ImageView>
            </HBox>

            <!-- Spacer -->
            <Pane prefWidth="50.0" />

            <!-- Navigation Labels -->
            <HBox alignment="CENTER" spacing="30.0">
                <Label fx:id="homeLabel" styleClass="nav-label" stylesheets="@../css/Styles.css" text="Home"  />
                <Label fx:id="shopsLabel" styleClass="nav-label" stylesheets="@../css/Styles.css" text="Shops" onMouseClicked="#handleShopsClick" />
                <Label fx:id="eventLabel" styleClass="nav-label" stylesheets="@../css/Styles.css" text="Events"  />
                <Label styleClass="nav-label" stylesheets="@../css/Styles.css" text="Parking" />
                <Label onMouseClicked="#handlePanierClick" styleClass="nav-label" stylesheets="@../css/Styles.css" text="Cart" />
            </HBox>

            <!-- Spacer -->
            <Pane prefWidth="105.0" />

            <!-- Notifications Icon -->
            <ImageView fitHeight="21.0" fitWidth="21.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../assets/notif.png" />
                </image>
            </ImageView>

            <!-- User Profile -->
            <HBox alignment="CENTER" prefHeight="74.0" prefWidth="150.0" spacing="10.0">
                <Label styleClass="user-label" text="Eyaaa" />
                <ImageView fitHeight="33.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../assets/user3.png" />
                    </image>
                </ImageView>
            </HBox>
        </children>
    </HBox>



    <!-- Conteneur principal -->
    <AnchorPane prefHeight="700.0" style="-fx-background-color: #f4f4f4;">
        <!-- Card Container -->
        <VBox alignment="CENTER" layoutX="50.0" layoutY="50.0" prefHeight="600.0" prefWidth="400.0" spacing="20"
              style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 30px; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.15), 15, 0, 0, 5);"
              AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">

            <!-- Progress Bar for Points -->
            <VBox alignment="CENTER" spacing="10">
                <Label fx:id="pointsLabel" style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Points: 0/2000" />
                <ProgressBar fx:id="pointsProgressBar" prefWidth="300" progress="0" style="-fx-accent: #94bee4;" />
                <Label fx:id="winMessageLabel" style="-fx-font-size: 14px; -fx-text-fill: green; -fx-font-weight: bold;" visible="false" text="Congratulations! You won a 20% discount!" />
            </VBox>

            <!-- Profile Image -->
            <StackPane>
                <ImageView fx:id="profileImageView" fitHeight="120" fitWidth="120" pickOnBounds="true" preserveRatio="true"
                           style="-fx-background-radius: 60; -fx-border-radius: 60; -fx-border-color: #94bee4; -fx-border-width: 3;">
                    <image>
                        <Image url="@../assets/7.png" />
                    </image>
                </ImageView>
                <!-- Circular Shadow Effect -->
                <StackPane style="-fx-background-radius: 60; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 10, 0, 0, 5);" />
            </StackPane>

            <!-- Welcome Label -->
            <Label fx:id="welcomeLabel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Welcome" />

            <!-- User Information -->
            <VBox alignment="CENTER" spacing="15" style="-fx-padding: 0 20px;">
                <!-- Name -->
                <HBox alignment="CENTER" spacing="10">
                    <ImageView fitHeight="20" fitWidth="20">
                        <image>
                            <Image url="@../assets/usericon.png" />
                        </image>
                    </ImageView>
                    <Label fx:id="nomLabel" style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Nom Prénom" />
                </HBox>

                <!-- Email -->
                <HBox alignment="CENTER" spacing="10">
                    <ImageView fitHeight="20" fitWidth="20">
                        <image>
                            <Image url="@../assets/mailicon.png" />
                        </image>
                    </ImageView>
                    <Label fx:id="emailLabel" style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Email" />
                </HBox>

                <!-- Phone -->
                <HBox alignment="CENTER" spacing="10">
                    <ImageView fitHeight="20" fitWidth="20">
                        <image>
                            <Image url="@../assets/phoneicon.png" />
                        </image>
                    </ImageView>
                    <Label fx:id="telephoneLabel" style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Téléphone" />
                </HBox>

                <!-- Address -->
                <HBox alignment="CENTER" spacing="10">
                    <ImageView fitHeight="20" fitWidth="20">
                        <image>
                            <Image url="@../assets/locationicon.png" />
                        </image>
                    </ImageView>
                    <Label fx:id="adresseLabel" style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Adresse" />
                </HBox>
            </VBox>

            <!-- Action Buttons -->
            <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20px 0;">
                <!-- Edit Button -->
                <Button onAction="#handleEdit" prefHeight="40" prefWidth="130"
                        style="-fx-background-color: #94bee4; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 5, 0, 0, 3);"
                        text="Edit" />

                <!-- Logout Button -->
                <Button onAction="#handleLogout" prefHeight="40" prefWidth="130"
                        style="-fx-background-color: #d6755c; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 5, 0, 0, 3);"
                        text="Logout" />
            </HBox>
        </VBox>
    </AnchorPane>

</VBox>