      <StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="810.0" prefWidth="1578.0" spacing="20">
            <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="619.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="711.0" prefWidth="619.0" spacing="20.0">
               <!-- Titre -->
               <Text fill="WHITE" fontSmoothingType="LCD" styleClass="text-blue" text="Create new account" textAlignment="CENTER" wrappingWidth="394.39990234375">
                  <font>
                     <Font name="System Bold" size="36.0" />
                  </font>
               </Text>

               <!-- Boutons de sélection de rôle -->
               <HBox alignment="CENTER" prefHeight="53.0" prefWidth="619.0" spacing="20">
                  <Button fx:id="utilisateurButton" onAction="#handleRoleSelection" prefHeight="35" prefWidth="140" styleClass="btn_signin" text="Utilisateur">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Button>
                  <Button fx:id="shopOwnerButton" onAction="#handleRoleSelection" prefHeight="35" prefWidth="140" styleClass="btn_signup" text="Shop Owner">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Button>
               </HBox>

