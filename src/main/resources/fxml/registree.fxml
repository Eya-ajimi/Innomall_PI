                  <Label fx:id="categorieLabel" style="-fx-font-size: 14px;" text="Catégorie:" visible="false" />
                  <ComboBox fx:id="categorieCombo" maxWidth="350" promptText="Sélectionnez une catégorie" styleClass="textfield" visible="false" />

                  <Label fx:id="nomLabel" style="-fx-font-size: 14px;" text="Nom:" />
                  <TextField fx:id="nomField" maxWidth="350" promptText="Entrez votre nom" styleClass="textfield" />

