<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.gui.oussemacontroller.UpdateReclamationController">
    <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #E1F4FF; -fx-padding: 20;">
        <!-- Title -->
        <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Update Reclamation" />

        <!-- Commentaire Field -->
        <TextField fx:id="commentaireField" prefWidth="300" promptText="Commentaire" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ADE2EE; -fx-border-width: 2; -fx-padding: 5;" />

        <!-- Update Button -->
        <Button onAction="#handleUpdate" style="-fx-background-color: #F9A66A; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 20;" text="Update" />
    </VBox>
</AnchorPane>