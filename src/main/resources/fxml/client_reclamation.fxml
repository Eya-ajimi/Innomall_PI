<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.gui.ClientReclamationController">
    <VBox alignment="CENTER" prefHeight="567.0" prefWidth="740.0" spacing="20" style="-fx-background-color: #E1F4FF; -fx-padding: 20;">
        <!-- Title -->
        <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Ajouter Reclamation" />

        <!-- Description Field -->
        <TextField fx:id="descriptionField" alignment="CENTER" prefHeight="292.0" prefWidth="722.0" promptText="Description" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ADE2EE; -fx-border-width: 2; -fx-padding: 5;">
         <font>
            <Font size="29.0" />
         </font></TextField>

        <!-- Shop Name Field -->
        <TextField fx:id="nomshopField" alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="32.0" prefWidth="207.0" promptText="Shop Name" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ADE2EE; -fx-border-width: 2; -fx-padding: 5;" />

        <!-- Submit Button -->
        <Button onAction="#handleSubmit" style="-fx-background-color: #F9A66A; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 20;" text="Submit" />
    </VBox>
</AnchorPane>
