<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>

<?import javafx.scene.layout.HBox?>
<AnchorPane prefHeight="678.0" prefWidth="902.0" style="-fx-background-color: #E1F4FF; -fx-padding: 20;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.gui.oussemacontroller.EventController">

    <!-- ScrollPane to hold the event cards -->
    <ScrollPane fx:id="scrollPane" fitToWidth="true" layoutX="10.0" layoutY="50.0" prefHeight="520.0" prefWidth="862.0"
                style="-fx-background-color: transparent; -fx-border-color: transparent;
                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 5, 0, 1, 1);">
        <FlowPane fx:id="eventsContainer" hgap="15" vgap="15" prefWrapLength="850"
                  style="-fx-padding: 15; -fx-background-radius: 10;" />
    </ScrollPane>

    <!-- "Add Event" button at the bottom -->
    <Button layoutX="375.0" layoutY="600.0" mnemonicParsing="false" onAction="#handleAddEvent"
            style="-fx-background-color: #F9A66A;
                   -fx-text-fill: white;
                   -fx-font-size: 16px;
                   -fx-font-weight: bold;
                   -fx-background-radius: 8;
                   -fx-padding: 10 20;"
            text="Add Event">
        <HBox style="-fx-background-color: transparent;">
            <style>
                button:hover {
                -fx-scale-x: 1.05;
                -fx-scale-y: 1.05;
                -fx-opacity: 0.9;
                }
            </style>
        </HBox>
    </Button>

</AnchorPane>