<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane alignment="center" hgap="15" vgap="15"
          xmlns:fx="http://javafx.com/fxml/1"
          xmlns="http://javafx.com/javafx/23.0.1"
          fx:controller="tn.esprit.gui.RegisterController"
          stylesheets="@../css/style.css">

    <!-- Titre de la page -->
    <Label text="Choisissez votre rôle :" GridPane.columnIndex="1" GridPane.rowIndex="0"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>

    <!-- Boutons pour choisir le rôle -->
    <HBox alignment="CENTER" spacing="20" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <Button fx:id="utilisateurButton" text="Utilisateur" onAction="#handleRoleSelection"
                styleClass="role-button"/>
        <Button fx:id="shopOwnerButton" text="Shop Owner" onAction="#handleRoleSelection"
                styleClass="role-button"/>
    </HBox>

    <!-- Formulaire (caché par défaut) -->
    <VBox fx:id="formContainer" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="2" spacing="10">
        <!-- Nom -->
        <Label text="Nom:" style="-fx-font-size: 14px;"/>
        <TextField fx:id="nomField" promptText="Entrez votre nom"/>

        <!-- Prénom -->
        <Label text="Prénom:" style="-fx-font-size: 14px;"/>
        <TextField fx:id="prenomField" promptText="Entrez votre prénom"/>

        <!-- Email -->
        <Label text="Email:" style="-fx-font-size: 14px;"/>
        <TextField fx:id="emailField" promptText="Entrez votre email"/>

        <!-- Mot de passe -->
        <Label text="Mot de passe:" style="-fx-font-size: 14px;"/>
        <PasswordField fx:id="passwordField" promptText="Entrez votre mot de passe"/>

        <!-- Téléphone -->
        <Label text="Téléphone:" style="-fx-font-size: 14px;"/>
        <TextField fx:id="telephoneField" promptText="Entrez votre téléphone"/>

        <!-- Adresse -->
        <Label text="Adresse:" style="-fx-font-size: 14px;"/>
        <TextField fx:id="adresseField" promptText="Entrez votre adresse"/>



        <!-- Bouton S'inscrire -->
        <Button fx:id="registerButton" text="S'inscrire" onAction="#handleRegister"
                style="-fx-font-size: 16px;"/>
    </VBox>

</GridPane>