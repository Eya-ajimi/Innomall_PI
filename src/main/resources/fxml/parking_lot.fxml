<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import java.net.URL?>

<VBox fx:id="root" spacing="20" styleClass="main-container"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.gui.ParkingLotController">

    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <!-- Header Section -->
    <HBox spacing="20" alignment="CENTER">
        <Label text="Parking Management System" styleClass="title-label"/>
    </HBox>

    <!-- Stats Container -->
    <HBox spacing="20" alignment="CENTER">
        <StackPane fx:id="statsCard1" styleClass="stats-card">
            <Label fx:id="counterLabel" text="Available Spots: 20" styleClass="stats-label"/>
        </StackPane>

        <StackPane fx:id="statsCard2" styleClass="stats-card">
            <Label fx:id="occupancyLabel" text="Occupancy: 0%" styleClass="stats-label"/>
        </StackPane>
    </HBox>

    <!-- Parking Layout -->
    <VBox fx:id="parkingArea" alignment="CENTER" spacing="30" styleClass="parking-container">
        <!-- Legend -->
        <HBox spacing="20" alignment="CENTER" styleClass="legend-container">
            <HBox spacing="10" alignment="CENTER_LEFT" styleClass="legend-item">
                <Rectangle width="20" height="20" styleClass="available-spot"/>
                <Label text="Available" styleClass="legend-label"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT" styleClass="legend-item">
                <Rectangle width="20" height="20" styleClass="occupied-spot"/>
                <Label text="Occupied" styleClass="legend-label"/>
            </HBox>
        </HBox>

        <!-- Top Row with Zones -->
        <VBox spacing="10">
            <HBox fx:id="topRow" alignment="CENTER" styleClass="parking-row"/>
            <HBox alignment="CENTER" spacing="142">
                <Label text="Zone A" styleClass="zone-label"/>
                <Label text="Zone B" styleClass="zone-label"/>
                <Label text="Zone C" styleClass="zone-label"/>
                <Label text="Zone D" styleClass="zone-label"/>
            </HBox>
        </VBox>

        <!-- Central Passage -->
        <StackPane>
            <Rectangle fx:id="passage" height="80" styleClass="passage"/>
            <Label text="⟵ Driving Lane ⟶" styleClass="passage-label"/>
        </StackPane>

        <!-- Bottom Row with Zones -->
        <VBox spacing="10">
            <HBox fx:id="bottomRow" alignment="CENTER" styleClass="parking-row"/>
            <HBox alignment="CENTER" spacing="142">
                <Label text="Zone E" styleClass="zone-label"/>
                <Label text="Zone F" styleClass="zone-label"/>
                <Label text="Zone G" styleClass="zone-label"/>
                <Label text="Zone H" styleClass="zone-label"/>
            </HBox>
        </VBox>
    </VBox>

    <stylesheets>
        <URL value="@/css/style.css" />
    </stylesheets>
</VBox>