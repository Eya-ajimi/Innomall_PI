<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="464.0" prefWidth="621.0" style="-fx-background-color: #E1F4FF;"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.gui.oussemacontroller.EventFormController">

    <VBox layoutX="13.0" layoutY="14.0" prefHeight="406.0" prefWidth="594.0" spacing="10.0">
        <Label style="-fx-font-size: 14px;" text="Shop Name" />
        <TextField fx:id="eventNameField" prefWidth="200.0" />

        <Label style="-fx-font-size: 14px;" text="Event Description" />
        <TextField fx:id="eventDescriptionField" prefWidth="200.0" />

        <Label style="-fx-font-size: 14px;" text="Start Date" />
        <DatePicker fx:id="startDatePicker" prefWidth="200.0" />

        <Label style="-fx-font-size: 14px;" text="End Date" />
        <DatePicker fx:id="endDatePicker" prefWidth="200.0" />

        <Label style="-fx-font-size: 14px;" text="Location" />
        <TextField fx:id="locationField" prefWidth="200.0" />

        <Button onAction="#handleConfirm" prefHeight="30.0" prefWidth="610.0" style="-fx-background-color: #F9A66A; -fx-text-fill: white; -fx-font-size: 14px;" text="Confirm" />
    </VBox>
</AnchorPane>