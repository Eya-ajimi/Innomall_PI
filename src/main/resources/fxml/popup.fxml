<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.gui.ModifyPopupController">
    <!-- Label pour le titre de la popup -->
    <Label layoutX="50" layoutY="20" text="Modifier les informations">
        <font>
            <Font name="System Bold" size="18"/>
        </font>
    </Label>

    <!-- Champs de texte pour modifier les informations -->
    <TextField fx:id="nomField" layoutX="50" layoutY="60" promptText="Nom"/>
    <TextField fx:id="prenomField" layoutX="50" layoutY="100" promptText="Prénom"/>
    <TextField fx:id="emailField" layoutX="50" layoutY="140" promptText="Email"/>
    <TextField fx:id="telephoneField" layoutX="50" layoutY="180" promptText="Téléphone"/>
    <TextField fx:id="adresseField" layoutX="50" layoutY="220" promptText="Adresse"/>

    <!-- Bouton pour sauvegarder les modifications -->
    <Button layoutX="50" layoutY="260" text="Sauvegarder" onAction="#handleSave"/>
</AnchorPane>