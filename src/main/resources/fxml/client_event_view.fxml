<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../css/Styles.css" fx:controller="tn.esprit.gui.oussemacontroller.ClientEventViewController">

    <HBox alignment="CENTER" prefHeight="73.0" prefWidth="1353.0" style="-fx-background-color: #E1F4FF;">
        <children>
            <!-- Logo Label -->
            <Label prefHeight="50.0" prefWidth="133.0" styleClass="logo-label" stylesheets="@../css/Styles.css" text="InnoMall">
                <HBox.margin>
                    <Insets left="-140.0" />
                </HBox.margin>
            </Label>

            <!-- Separator -->
            <Separator orientation="VERTICAL" prefHeight="74.0" prefWidth="21.0" />

            <!-- Search Bar -->
            <HBox alignment="CENTER" spacing="5.0">
                <TextField prefHeight="26.0" prefWidth="258.0" promptText="Search..." style="-fx-background-radius: 15; -fx-background-color: white;" stylesheets="@../css/Styles.css" />
                <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../assets/searchbare.png" />
                    </image>
                </ImageView>
            </HBox>

            <!-- Spacer -->
            <Pane prefWidth="50.0" />

            <HBox alignment="CENTER" spacing="30.0">
                <Label fx:id="homeLabel" styleClass="nav-label" stylesheets="@../css/Styles.css" text="Home"  />
                <Label fx:id="shopsLabel" styleClass="nav-label" stylesheets="@../css/Styles.css" text="Shops"  />
                <Label fx:id="eventLabel" styleClass="nav-label" stylesheets="@../css/Styles.css" text="Events" />
                <Label fx:id="parkingLabel" styleClass="nav-label" stylesheets="@../css/Styles.css" text="Parking" />
                <Label fx:id="cartLabel" styleClass="nav-label" stylesheets="@../css/Styles.css" text="Cart" />
            </HBox>

            <!-- Spacer -->
            <Pane prefWidth="105.0" />

            <!-- Notifications Icon -->
            <ImageView fitHeight="21.0" fitWidth="21.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../assets/notif.png" />
                </image>
            </ImageView>

            <!-- User Profile -->
            <HBox alignment="CENTER" prefHeight="74.0" prefWidth="159.0" spacing="10.0">
                <Label styleClass="user-label" stylesheets="@../css/Styles.css" text="Eyaaa" />
                <ImageView fx:id="userProfileImage" fitHeight="33.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../assets/user3.png" />
                    </image>
                </ImageView>
            </HBox>
        </children>
    </HBox>

    <children>
        <!-- Centered search bar -->
        <VBox layoutX="0.0" layoutY="20.0" alignment="CENTER" spacing="10.0" prefWidth="1172.0">
            <HBox alignment="CENTER" spacing="10.0">
                <DatePicker fx:id="searchDatePicker" promptText="Select a date"
                            style="-fx-font-size: 14px; -fx-padding: 5px;"/>
                <Button onAction="#handleSearch" text="Search"
                        style="-fx-background-color: #FFB177; -fx-text-fill: white;
                               -fx-font-weight: bold; -fx-background-radius: 8px;
                               -fx-padding: 8px 15px; -fx-font-size: 14px;"/>
            </HBox>
        </VBox>
        <!-- Scroll pane for events -->
        <ScrollPane fitToWidth="true" layoutX="4.0" layoutY="80.0" prefHeight="700.0" prefWidth="1172.0"
                    style="-fx-background-color: transparent; -fx-border-color: transparent;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 5, 0, 1, 1);">
            <FlowPane fx:id="eventsContainer" hgap="15" prefWrapLength="760"
                      style="-fx-padding: 15; -fx-background-radius: 10;" vgap="15" />
        </ScrollPane>
    </children>
</VBox>