<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>

<AnchorPane prefHeight="678.0" prefWidth="902.0" style="-fx-background-color: #E1F4FF;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.gui.MainController">

    <!-- ScrollPane to hold the event cards -->
    <ScrollPane fx:id="scrollPane" fitToWidth="true" layoutX="10.0" layoutY="50.0" prefHeight="520.0" prefWidth="862.0">
        <FlowPane fx:id="eventsContainer" hgap="10" style="-fx-padding: 10;" vgap="10" />
    </ScrollPane>

    <!-- "Refresh" button at the top right -->
    <Button layoutX="806.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleRefresh" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" text="Refresh" />

    <!-- "Add Event" button at the bottom -->
    <Button layoutX="375.0" layoutY="586.0" mnemonicParsing="false" onAction="#handleAddEvent" style="-fx-background-color: #F9A66A; -fx-text-fill: white; -fx-font-size: 14px;" text="Add Event" />

</AnchorPane>
