                    <font>
                        <Font name="Corbel" size="12.0" />
                    </font></Label>
            </HBox>

            <!-- Description du produit -->
            <HBox alignment="CENTER_LEFT" prefHeight="18.0" prefWidth="328.0" spacing="5">
                <Label style="-fx-font-weight: bold;" text="Description :" />
                <Label fx:id="descriptionLabel" style="-fx-text-fill: #666;" />
            </HBox>

            <!-- Prix du produit -->
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label style="-fx-font-weight: bold;" text="Prix :" />
                <Label fx:id="prixLabel" style="-fx-font-weight: bold; -fx-text-fill: #2ecc71;" />
            </HBox>
        </VBox>

        <!-- Colonne droite : ContrÃ´les quantitÃ© -->
        <HBox alignment="CENTER_RIGHT" spacing="20.0">
            <Button onAction="#handleDiminuerQuantite" style="-fx-background-radius: 15;" stylesheets="@../css/panier.css" text="-" />
            <Label fx:id="quantiteLabel" style="-fx-padding: 0 10 0 10;" />
            <Button onAction="#handleAugmenterQuantite" style="-fx-background-radius: 15;" stylesheets="@../css/panier.css" text="+" />
            <Button onAction="#handleSupprimerArticle" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 15;" text="ðŸ—‘" />
