<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.gui.mariahosscontroller.PanierCardController"
            prefHeight="400.0" prefWidth="600.0">
    <?xml version="1.0" encoding="UTF-8"?>



    <HBox prefWidth="570.0" spacing="10" style="-fx-border-color: #578FCA; -fx-border-radius: 15; -fx-background-radius: 20; -fx-border-width: 2;" >

       <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>

        <!-- Colonne gauche : Informations produit -->
        <VBox prefHeight="63.0" prefWidth="386.0" spacing="5">
            <!-- Nom du produit -->
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label style="-fx-font-weight: bold;" text="Nom :" />
